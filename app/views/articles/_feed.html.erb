<div class="column is-half">
  <article class="media box">
    <div class="media-content">
      <%= render 'form' %>
    </div>
  </article>

  <% @articles.each do | article | %>
    <div class="box">
      <article class="media">
        <div class="media-content">
          <div class="content">
            <strong>Vitalii Kindrat</strong><br>
            <small>@nick</small><br>
            <p><%= article.title %></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">

              <%= link_to article, class: "level-item" do %>
                <span class="icon">
                  <i class="fa fa-link" aria-hidden="true"></i>
                </span>
              <% end %>

              <%= link_to edit_article_path(article), class: "level-item" do %>
                <span class="icon">
                  <i class="fa fa-pencil" aria-hidden="true"></i>
                </span>
              <% end %>

              <%= link_to article, method: :delete, data: { confirm: "Are you really want to delete this post?"} do %>
                <span class="icon">
                  <i class="fa fa-trash-o" aria-hidden="true"></i>
                </span>
              <% end %>

            </div>
          </nav>
        </div>
      </article>
    </div>
    <% end %>
</div>
