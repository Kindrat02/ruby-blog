<div class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-half">
				<h1 class="title">Editing Article</h1>

        <%= simple_form_for(@article) do |article| %>
        <div class="field">
            <div class="control">
              <%= article.input :title, label: "Edit article title here", input_html: { class: "input", value: @article.title},
              wrapper: false, label_html: {class: "label"}, placeholder: "Write post`s title here" %>
              <%= article.input :body, label: "Edit article body here", input_html: { class: "textarea", value: @article.body},
              wrapper: false, label_html: {class: "label"}, placeholder: "Write post`s text here" %>
            </div>
          </div>
          <%= article.submit "Edit article", class: "button is-link" %>
        <% end %>

			</div>
		</div>
	</div>
</div>
