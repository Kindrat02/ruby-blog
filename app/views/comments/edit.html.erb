<div class="section">
	<div class="container">
		<div class="columns is-centered">
			<div class="column is-half">
				<h1 class="title">Editing Comment</h1>

        <%= simple_form_for(@article, @comment) do |comment| %>
        <div class="field">
            <div class="control">
              <%= article.input :body, label: "Edit comment body here", input_html: { class: "textarea", value: comment.body},
              wrapper: false, label_html: {class: "label"}, placeholder: "Write comment`s text here" %>
            </div>
          </div>
          <%= comment.submit "Edit comment", class: "button is-link" %>
        <% end %>

			</div>
		</div>
	</div>
</div>
